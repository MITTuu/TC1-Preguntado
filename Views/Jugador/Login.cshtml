@model Preguntado.Models.Jugador

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Iniciar Sesión</h2>

            <!-- Mostar mensaje de error si las credenciales no son correctas -->
            @if (ViewData.ModelState[""]?.Errors.Any() == true)
            {
                <div class="alert alert-danger">
                    @foreach (var error in ViewData.ModelState[""].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }

            <!-- Formulario de login -->
            <form asp-action="Login" method="post">
                <div class="form-group mb-3">
                    <label for="Nombre">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model?.Nombre" required />
                </div>
                <div class="form-group mb-3">
                    <label for="Contraseña">Contraseña</label>
                    <input type="password" class="form-control" id="Contraseña" name="Contraseña" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
            </form>

            <!-- Enlace para registrar un nuevo usuario -->
            <div class="text-center mt-3">
                <p>¿No tienes una cuenta? <a asp-action="Register" asp-controller="Jugador">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>

